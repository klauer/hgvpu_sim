###########  FPGA Firmware Revision  ############
record(bi,"$(U):FirmwareRev0") {
        field(DESC,"FPGA FW Bit 0")
        field(PINI,"YES")
        field(DTYP,"asynUInt32Digital")
        field(INP,"@asynMask(pio24 0x8000f8 0x10)")
        field(ZNAM,"ON")
        field(ONAM,"OFF")
}
