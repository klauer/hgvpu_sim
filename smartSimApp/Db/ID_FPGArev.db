        field(DESC,"FPGA FW Bit 1")
        field(PINI,"YES")
        field(DTYP,"asynUInt32Digital")
        field(INP,"@asynMask(pio24 0x8000f8 0x20)")
        field(ZNAM,"ON")
        field(ONAM,"OFF")
}
