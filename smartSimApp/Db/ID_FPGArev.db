record(calc,"$(U):FirmwareRevision") {
        field(DESC,"$(U) Firmware Rev")
        field(PINI,"YES")
        field(CALC,"A+2*B+4*C+8*D")
        field(INPA,"$(U):FirmwareRev0 NPP NMS")
        field(INPB,"$(U):FirmwareRev1 NPP NMS")
        field(INPC,"$(U):FirmwareRev2 NPP NMS")
        field(INPD,"$(U):FirmwareRev3 NPP NMS")
}

